<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="Bootstrap Admin App + jQuery">
    <meta name="keywords" content="app, responsive, jquery, bootstrap, dashboard, admin">
    <title>@ViewBag.Title Angle - Bootstrap Admin Template</title>
    <!-- =============== VENDOR STYLES ===============-->
    @Styles.Render("~/Content/fontawesome")
    @Styles.Render("~/Content/simpleLineIcons")

    <!-- =============== PAGE VENDOR STYLES =============== -->
    @RenderSection("PageStyles", required: false)
    <!-- =============== BOOTSTRAP STYLES ===============-->
    @*@Styles.Render("~/Content/bootstrap")*@
    <link href="/Content/app/css/bootstrap.css" rel="stylesheet" type="text/css" id="bscss" />

    <!-- =============== APP STYLES ===============-->
    @*@Styles.Render("~/Content/app")
        @Styles.Render("~/Content/mvc-override")*@
    <link href="/Content/app/css/app.css" rel="stylesheet" type="text/css" id="maincss" />
    @*<link href="/Content/mvc-override.css" rel="stylesheet" type="text/css" />*@
    <link href="/bundles/mvc-override.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <div class="wrapper">
        @RenderBody()
    </div>
    <div class="p-lg text-center">
        <span>&copy;</span>
        <span>2016</span>
        <span>-</span>
        <span>Angle</span>
        <br>
        <span>Bootstrap Admin Template</span>
    </div>
    <!-- =============== VENDOR SCRIPTS ===============-->
    @Scripts.Render(
      "~/bundles/modernizr"
    , "~/bundles/jquery"
    , "~/bundles/bootstrap"
    , "~/bundles/storage"
    , "~/bundles/Parsley")
    <!-- =============== PAGE VENDOR SCRIPTS ===============-->
    @RenderSection("PageScripts", required: false)
    <!-- =============== APP SCRIPTS ===============-->
    @Scripts.Render("~/bundles/Angle")
    @RenderSection("scripts", required: false)
</body>
</html>